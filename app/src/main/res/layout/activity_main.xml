<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="22dp"
    android:background="@drawable/background"
    tools:context="com.example2017.android.tasks.MainActivity">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="90dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تسجيل الدخول"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#424242"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/sginin"
        android:id="@+id/but_login"
        android:textSize="22dp"
        android:background="@drawable/button_background"
        android:textColor="#424242"
        android:layout_gravity="center"
        android:layout_marginTop="60dp" />


       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:background="@drawable/message_icon"
           android:layout_gravity="end"
           android:layout_marginTop="69dp"
           android:layout_marginEnd="7dp"
           />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText_email"
        android:hint="  Email"
        android:padding="10dp"
        android:textColorHint="#9E9E9E"
        android:layout_marginTop="60dp"
        />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pass_icon"
            android:layout_gravity="end"
            android:layout_marginTop="129dp"
            android:layout_marginEnd="7dp"
            />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editText_password"
        android:hint="  Password"
        android:padding="10dp"
        android:textColorHint="#9E9E9E"
        android:layout_below="@+id/editText_email"
        android:layout_marginTop="120dp"
         />
    </android.support.v7.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account "
        android:layout_below="@+id/card_view"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/createNew"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/sginup"
        android:id="@+id/but_logup"
        android:textSize="12dp"
        android:background="@drawable/button_background"
        android:textColor="#424242"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/createNew"
        />
</RelativeLayout>
